<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopGI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopGI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navigation" style="margin-left:2%">
            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" width="100px" /></a>
        </nav>
        
        <nav class="navigation" style="margin-right:auto">
            <div>
                @*<a asp-area="" asp-controller="Product" asp-action="List">Sản Phẩm</a>*@
                <a asp-area="" asp-controller="" asp-action="">Nạp tiền</a>
                <a asp-area="" asp-controller="" asp-action="">Nạp game</a>
                <a asp-area="" asp-controller="Cart" asp-action="Index">Giỏ Hàng</a>
            </div>
                
        </nav>
        <nav class="navigation">
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="PersonalInfo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Xin chào @User.Identity.Name</a>

                    <a asp-controller="Account" asp-action="Logout">Đăng Xuất</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register">Đăng Ký</a>
                }
            </div>

        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="footer border-top text-muted">
        <div class="container">
            &copy; 2023 - ShopGI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
