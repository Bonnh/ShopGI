<body>
    <div class="wrapper" style="margin-top:40px">
        <div class="form-box register">
            <h2 class="guide__title" style="margin-top:-10px">Registration</h2>
            <form method="post">
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name="person"></ion-icon>
                    </span>
                    <input asp-for="Usernamee" type="text" required>
                    <label asp-for="Usernamee"></label>
                </div>
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name="mail"></ion-icon>
                    </span>
                    <input asp-for="Email" type="email" required>
                    <label asp-for="Email"></label>
                </div>
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name="lock-closed"></ion-icon>
                    </span>
                    <input asp-for="Password" type="password" required>
                    <label asp-for="Password"></label>
                </div>
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name="lock-closed"></ion-icon>
                    </span>
                    <input asp-for="ConfirmPassword" type="password" required>
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">I agree to the term & conditions</label>
                </div>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Already have an account? <a asp-controller="Account" asp-action="Login" class="register-link">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
