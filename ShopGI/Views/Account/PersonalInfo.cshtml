@model ShopGI.Models.ViewModels.RegisterViewModel

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Email: @User.Identity.Name</label>
            </div>
            <div class="form-group">
                <label class="control-label">Số dư: @Html.DisplayFor(modelItem => modelItem.Coin)</label>
            </div>
        </form>
    </div>
</div>
